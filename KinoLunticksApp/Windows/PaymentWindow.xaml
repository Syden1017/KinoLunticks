<Window x:Class="KinoLunticksApp.Windows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinoLunticksApp.Windows"
        mc:Ignorable="d"
        
        Title="Оплата забронированных билетов"
        
        Height="300"
        Width="500"
        
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0"
               Grid.Row="0"
               Grid.RowSpan="2">
            <Image.Source>
                <Binding Path="Preview">
                    <Binding.TargetNullValue>
                        <ImageSource>
                            /KinoLunticksApp;component/Images/DefaultPhoto.png
                        </ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>

        <TextBlock Text="{Binding MovieName}"
                   Grid.Column="1"
                   Grid.Row="0"/>

        <TextBlock Text="Выбранные места:"
                   Grid.Column="2"
                   Grid.Row="0"/>

        <TextBlock Text=""
                   Grid.Column="3"
                   Grid.Row="0"/>

        <TextBlock Text="Общая сумма:"
                   Grid.Column="1"
                   Grid.Row="1"/>

        <TextBlock Text=""
                   Grid.Column="2"
                   Grid.Row="1"/>
    </Grid>
</Window>