<Window x:Class="KinoLunticksApp.Windows.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KinoLunticksApp.Windows"
        mc:Ignorable="d"
        
        Title="Оплата забронированных билетов"
        
        Height="400"
        Width="800"
        
        WindowStartupLocation="CenterScreen"
        
        Background="{StaticResource gradient}">

    <Window.Resources>
        <LinearGradientBrush x:Key="gradient" StartPoint="0,0" EndPoint="1,1">

            <GradientStop Color="#41C0C7" Offset="0.1" />
            <GradientStop Color="#94DBDF" Offset="0.5" />
            <GradientStop Color="#FFF" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Image Grid.Column="0" 
           Grid.Row="0">
            <Image.Source>
                <Binding Path="Preview">
                    <Binding.TargetNullValue>
                        <ImageSource>
                            /KinoLunticksApp;component/Images/DefaultPhoto.png
                        </ImageSource>
                    </Binding.TargetNullValue>
                </Binding>
            </Image.Source>
        </Image>

        <StackPanel Grid.Column="1"
                Grid.Row="0"
                Orientation="Vertical">
            <TextBlock Text="{Binding MovieName}"
                   
                   Style="{DynamicResource txtBlockTicketBuying}"
                   FontSize="30"
                   FontWeight="Bold"/>

            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Здесь мог бы быть ваш жанр"
                       
                       Style="{DynamicResource txtBlockTicketBuying}"
                       FontSize="10"
                       FontWeight="Bold"
                       Margin="0 0 10 0"/>

                <TextBlock Text="{Binding AgeRestriction}"
                       
                       Style="{DynamicResource txtBlockTicketBuying}"
                       FontSize="30"
                       FontWeight="Bold"/>
            </StackPanel>

            <TextBlock Text="{Binding MovieDuration}"
                   
                   Style="{DynamicResource txtBlockTicketBuying}"
                   FontSize="30"
                   FontWeight="Bold"/>
        </StackPanel>

        <Grid Grid.Row="2"
              Grid.Column="0"
              Grid.ColumnSpan="7">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="4*"/>
            </Grid.RowDefinitions>
            
            

            <TextBlock Text="Ваши места"
                       Grid.Column="0"
                       Grid.Row="0"/>

            <TextBlock Text="Выберите карту"
                       Grid.Column="2"
                       Grid.Row="0"/>

            <Grid Grid.Column="0"
                  Grid.Row="1"
                  Grid.ColumnSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="1">
                    <Border BorderBrush="#000">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="4*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Выберите карту:"
                                       Grid.Row="0"/>

                            <ListView x:Name="lViewCard"
                                      Grid.Row="1">
                                
                            </ListView>
                            
                            
                        </Grid>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Column="2"
                            Orientation="Vertical">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Button x:Name="btnPay"
                                Grid.Row="0"
                                Content="ОПЛАТИТЬ"/>
                        <Button x:Name="btnPrint"
                                Grid.Row="1"
                                Content="НАПЕЧАТАТЬ БИЛЕТ"/>
                        <Button x:Name="btnCancel"
                                Grid.Row="2"
                                Content="ОТМЕНА"/>
                    </Grid>
                </StackPanel>
            </Grid>
            
            
        </Grid>

        

        
    </Grid>
</Window>