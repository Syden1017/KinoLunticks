    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Cursors\luntikCursor.cur" />
    <None Remove="Cursors\luntikPointer.cur" />
    <None Remove="Fonts\Montserrat-VariableFont_wght.ttf" />
    <None Remove="Images\Chairs\ArmchairGreen.png" />
    <None Remove="Images\Chairs\ArmchairGrey.png" />
    <None Remove="Images\Chairs\ArmchairPurple.png" />
